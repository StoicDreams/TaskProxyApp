{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Task Proxy",
  "version": "0.1.10",
  "identifier": "com.task-proxy.app",
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Task Proxy",
        "width": 800,
        "height": 600,
        "resizable": true,
        "backgroundThrottling": "disabled",
        "decorations": false,
        "devtools": true,
        "minHeight": 600,
        "minWidth": 800,
        "userAgent": "Task Proxy/0.1.9"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
