{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1426",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Task Proxy",
    "version": "0.1.0"
  },
  "tauri": {
    "pattern": {
      "use": "brownfield"
    },
    "allowlist": {
      "app": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "protocol": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://*"
        ]
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "all": true
      },
      "shell": {
        "all": true,
        "open": true
      },
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.taskproxy.stoicdreams",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "exceptionDomain": "taskproxy"
      },
      "windows": {
        "webviewInstallMode": {
          "type": "offlineInstaller"
        }
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "taskproxy",
        "url": "/",
        "fullscreen": false,
        "resizable": true,
        "title": "Task Proxy",
        "width": 800,
        "height": 600,
        "decorations": false,
        "minWidth": 500,
        "minHeight": 500,
        "userAgent": "taskproxy"
      }
    ]
  }
}